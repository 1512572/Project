<div class="container-fluid mt-1">
    {{#if message}}
    <div class="alert alert-success container text-center">{{message}}</div>
    {{/if}}
    <div id="index-carouse" class="carousel slide ml-auto mr-auto animated bounceInUp" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#index-carouse" data-slide-to="0" class="active"></li>
            <li data-target="#index-carouse" data-slide-to="1"></li>
            <li data-target="#index-carouse" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <a href="/users/signup">
                    <img src="/images/Signup_Banner.png" alt="Đăng kí">
                </a>
            </div>
            <div class="carousel-item">
                <a href="/users/signin">
                    <img src="/images/Signin_Banner.png" alt="Đăng nhập">
                </a>
            </div>
            <div class="carousel-item">
                <a href="/shop">
                    <img src="/images/Shop_Banner.png" alt="Shop">
                </a>
            </div>
        </div>
        <a class="carousel-control-prev" href="#index-carouse" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#index-carouse" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <img src="/images/Main_Banner.png" class="mt-2 animated bounceInLeft">
    <div class="jumbotron jumbotron-fluid bg-dark text-light animated bounceInRight">
        <div class="title-step text-center mb-5">Chỉ với 3 bước:</div>
        <div class="row container-fluid">
            <div class="col-md-4 justify-content-center text-center">
                <i class="fa fa-square fa-10x"></i>
                <br/>
                <span class="mt-3 text-step">1. Chọn khung</span>
            </div>
            <div class="col-md-4 justify-content-center text-center">
                <i class="fa fa-object-group fa-10x"></i>
                <br/>
                <span class="mt-3 text-step">2. Sửa hình</span>
            </div>
            <div class="col-md-4 justify-content-center text-center">
                <i class="fa fa-check-circle fa-10x"></i>
                <br/>
                <span class="mt-3 text-step">3. Hoàn tất</span>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/pagination.min.js"></script>