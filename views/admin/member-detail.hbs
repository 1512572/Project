<div class="container mt-3 mb-3">
    <div class="card">
        <div class="card-header text-center">
            <h3 style="font-weight: bold;">THÔNG TIN TÀI KHOẢN</h3>
        </div>
        <div class="card-body">           
            <table class="table table-hover table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row" class="text-primary">ID</th>
                        <td class="text-center card-product-details">{{user._id}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Email</th>
                        <td class="text-center card-product-details">{{user.email}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tình trạng</th>
                        <td class="text-center card-product-details"  style="font-weight: bold !important; color: red !important;">{{userstatus}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tên người dùng</th>
                        <td class="text-center card-product-details">{{user.name}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Số điện thoại</th>
                        <td class="text-center card-product-details">{{user.phone}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Địa chỉ</th>
                        <td class="text-center card-product-details">{{user.addr}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            {{#if user.status}}
            <a href="/admin/ban/{{user._id}}">
                <button class="btn btn-danger">
                    Ban
                </button>
            </a>
            {{else}}
            <a href="/admin/unban/{{user._id}}">
                <button class="btn btn-success">
                    Unban
                </button>
            </a>
            {{/if}}
        </div>
    </div>
</div>