<div class="container mt-3 mb-3">
    <link rel='stylesheet' href='/stylesheets/admin.css' />
    <form method="POST" action="/admin/member-manager">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="input-group col-md-4 mb-3 ml-auto mr-auto">
            <input class="form-control py-2" type="text" placeholder="Tìm theo email" name="input">
            <span class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </form>
    <div class="container mt-3 mb-3">
        <table id="myTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center" onclick="sortTable(0)" data-toggle="tooltip" title="Click để sắp xếp">Tình trạng</th>
                    <th scope="col" class="text-center" onclick="sortTable(1)" data-toggle="tooltip" title="Click để sắp xếp">ID</th>
                    <th scope="col" class="text-center" onclick="sortTable(2)" data-toggle="tooltip" title="Click để sắp xếp">Email</th>
                    <th scope="col" class="text-center">Sửa</th>
                </tr>
            </thead>
            <tbody>
                <script src="/javascripts/admin.js"></script>
                {{#each users}}
                <tr>
                    {{#if this.status}}
                    <td scope="row" class="text-center text-success">Bình thường</td>
                    {{else}}
                    <td scope="row" class="text-center text-danger">Bị ban</td>
                    {{/if}}
                    <td class="text-center">{{this._id}}</td>
                    <td class="text-center">{{this.email}}</td>
                    <td class="text-center">
                        <a href="/admin/view-member/{{this._id}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

