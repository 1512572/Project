<div class="container mt-3 mb-3">
    <div class="card">
        <div class="card-header text-center">
            <h3 style="font-weight: bold;">THÔNG TIN ĐƠN HÀNG</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered table-striped">
                <script>console.log('{{order._id}}'')</script>
                <tbody>
                    <tr>
                        <th scope="row" class="text-primary">Mã đơn hàng</th>
                        <td class="text-center card-product-details">{{order._id}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tổng tiền</th>
                        <td class="text-center card-product-details text-danger">{{order.cart.totalPrice}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Người đặt</th>
                        <td class="text-center card-product-details">{{usermail}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tình trạng</th>
                        <td class="text-center card-product-details text-primary">{{orderstatus}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tên người nhận</th>
                        <td class="text-center card-product-details">{{order.name}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Số điện thoại</th>
                        <td class="text-center card-product-details">{{order.phone}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Địa chỉ</th>
                        <td class="text-center card-product-details">{{order.addr}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Loại thanh toán</th>
                        <td class="text-center card-product-details">{{order.paymethod}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Ngày đặt</th>
                        <td class="text-center card-product-details">{{order.added}}</td>
                    </tr>
                </tbody>
            </table>
            <div class="container-fluid m-2">
                {{#each order.cart.items}}
                <div class="row m-1 p-1">
                    <div class="col-sm-2 text-center">{{this.qty}} cái</div>
                    <div class="col-sm-4 text-center"><a href="#">Khung {{this.item.name}}</a></div>
                    <div class="col-sm-3 text-center"><img src="{{this.imagePath}}" style="max-height: 150px; width: auto;"></div>
                    <div class="col-sm-3 text-center" style="color: red; font-size: 1.1em; font-weight: bold;">{{this.price}} VNĐ</div>
                </div>
                {{/each}}
            </div>
        </div>
        {{#if cancelable}}
        <div class="card-footer row text-center">

            <div class="col-sm-6 text-center">
                <a href="/admin/cancel-order/{{order._id}}">
                    <button class="btn btn-danger">
                        Hủy
                    </button>
                </a>
            </div>

            <div class="col-sm-6 text-center">
                <a href="/admin/mark-as-done/{{order._id}}">
                    <button class="btn btn-success">
                        Hoàn tất
                    </button>
                </a>
            </div>

        </div>
        {{/if}}
    </div>
</div>