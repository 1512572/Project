<div class="container pt-5 pb-5">
    <div class="card border-dark card-sign-form animated bounceIn">
        <div class="card-body">
            {{#if msg}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/if}}
            <form method="POST" action="/users/change-password">

                <input type="hidden" name="id" value="{{userInfo._id}}">

                <div class="form-group">
                    <label for="oldpass" class="form-sign-label">Mật khẩu cũ</label>
                    <input type="password" class="form-control" name="oldpass">
                </div>

                <div class="form-group">
                    <label for="newpass" class="form-sign-label">Mật khẩu mới</label>
                    <input type="password" class="form-control" name="newpass">
                </div>

                <div class="form-group">
                    <label for="repass" class="form-sign-label">Xác nhận</label>
                    <input type="password" class="form-control" name="repass">
                </div>

                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Đổi</button>
                </div>
            
            </form>
        </div>
    </div>
</div>  