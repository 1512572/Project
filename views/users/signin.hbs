<div class="signin_background pt-5 pb-5">
    <div class="card border-dark card-sign-form animated bounceIn">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="email" class="form-sign-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Nhập email" required>
                </div>

                <div class="form-group">
                    <label for="password" class="form-sign-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>

            </form>
        </div>
    </div>
</div>