<div class="container pt-5 pb-5">
    <div class="card border-dark card-sign-form animated bounceIn">
        <div class="card-body">
            {{#if msg}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/if}}
            <form method="POST" action="/users/edit-info">

                <input type="hidden" name="id" value="{{userInfo._id}}">

                <div class="form-group">
                    <label for="name" class="form-sign-label">Tên người dùng</label>
                    <input type="text" class="form-control" name="name" value="{{userInfo.name}}">
                </div>

                <div class="form-group">
                    <label for="phone" class="form-sign-label">Số điện thoại</label>
                    <input type="tel" class="form-control" name="phone" value="{{userInfo.phone}}">
                </div>

                <div class="form-group">
                    <label for="addr" class="form-sign-label">Địa chỉ</label>
                    <input type="text" class="form-control" name="addr" value="{{userInfo.addr}}">
                </div>

                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            
            </form>
        </div>
    </div>
</div>  