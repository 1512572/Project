<div class="container mt-5 mb-5">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-center">Tình trạng</th>
                <th scope="col" class="text-center">ID</th>
                <th scope="col" class="text-center">Thời gian</th>
                <th scope="col" class="text-center">Tổng tiền</th>
                <th scope="col" class="text-center">Sửa</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <th scope="row" class="text-center text-primary">{{this.status}}</th>        
                <td class="text-center">{{this.id}}</td>
                <td class="text-center">{{this.added}}</td>
                <td class="text-center text-danger">{{this.cart.totalPrice}}</td>
                <td class="text-center"><a href="/users/view-order-detail/{{this._id}}"><i class="fas fa-edit"></i></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
