<div class="container mt-3 mb-3">
    <div class="card">
        <div class="card-header text-center">
            <h3 style="font-weight: bold;">THÔNG TIN TÀI KHOẢN</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row" class="text-primary">Email</th>
                        <td class="text-center card-product-details">{{userInfo.email}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Tên người dùng</th>
                        <td class="text-center card-product-details">{{userInfo.name}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Số điện thoại</th>
                        <td class="text-center card-product-details">{{userInfo.phone}}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-primary">Địa chỉ</th>
                        <td class="text-center card-product-details">{{userInfo.addr}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer row text-center">
            <div class="col-sm-4">
                <a href='#'>
                    <button class="btn btn-primary">Xem đơn hàng</button>
                </a>
            </div>
            <div class="col-sm-4">
                <a href='/users/change-password'>
                    <button class="btn btn-warning">Đổi mật khẩu</button>
                </a>
            </div>
            <div class="col-sm-4">
                <a href='/users/edit-info'>
                    <button class="btn btn-success">Sửa thông tin</button>
                </a>
            </div>
        </div>
    </div>
</div>