<div class="container pt-5 pb-5">
    <div class="card border-dark card-sign-form animated bounceIn">
        <div class="card-body">
            {{#if msg}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/if}}
            <form method="POST" action="/order-info">

                <div class="form-group">
                    <label for="name" class="form-sign-label">Tên người nhận hàng</label>
                    <input type="text" class="form-control" name="name" value="{{defuser.name}}" required>
                </div>

                <div class="form-group">
                    <label for="phone" class="form-sign-label">Số điện thoại</label>
                    <input type="tel" class="form-control" name="phone" value="{{defuser.phone}}" required>
                </div>

                <div class="form-group">
                    <label for="addr" class="form-sign-label">Địa chỉ giao hàng</label>
                    <input type="text" class="form-control" name="addr" value="{{defuser.addr}}" required>
                </div>

                <div class="form-group pl-5 pr-5 ml-5 mr-5">
                    <label for="paymethod" class="form-sign-label">Loại thanh toán</label>
                    <br>
                    <br>
                    <input type="radio" name="paymethod" value="COD" checked="true"> COD
                    <br>
                    <br>
                    <input type="radio" name="paymethod" value="OnePay"> Onepay
                    <br>
                    <br>
                </div>

                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Tiếp tục</button>
                </div>
            
            </form>
        </div>
    </div>
</div>  